generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model med_organizations {
  id      Int       @id @default(autoincrement())
  name    String
  reports reports[]
  users   users[]
}

model reports {
  id                              Int                @id @default(autoincrement())
  created_at                      DateTime?          @default(now()) @db.Timestamp(6)
  updated_at                      DateTime?          @default(now()) @db.Timestamp(6)
  created_by                      Int?
  updated_by                      Int?
  full_name                       String
  appeal_date                     DateTime           @db.Date
  appeal_type                     String?
  subject                         String?
  description                     String?
  route                           String?
  mo_name                         String?
  mo_id                           Int?
  status                          String?
  users_reports_created_byTousers users?             @relation("reports_created_byTousers", fields: [created_by], references: [id], onDelete: NoAction, onUpdate: NoAction)
  med_organizations               med_organizations? @relation(fields: [mo_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users_reports_updated_byTousers users?             @relation("reports_updated_byTousers", fields: [updated_by], references: [id], onDelete: NoAction, onUpdate: NoAction)
  reports_history                 reports_history[]
}

model reports_history {
  id         Int       @id @default(autoincrement())
  report_id  Int?
  field_name String
  old_value  String?
  new_value  String?
  changed_by Int?
  changed_at DateTime? @default(now()) @db.Timestamp(6)
  users      users?    @relation(fields: [changed_by], references: [id], onDelete: NoAction, onUpdate: NoAction)
  reports    reports?  @relation(fields: [report_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model users {
  id                                Int                @id @default(autoincrement())
  full_name                         String
  email                             String             @unique
  password_hash                     String
  role                              String
  mo_id                             Int?
  password_created_at               DateTime?          @default(now()) @db.Timestamp(6)
  last_login                        DateTime?          @db.Timestamp(6)
  reports_reports_created_byTousers reports[]          @relation("reports_created_byTousers")
  reports_reports_updated_byTousers reports[]          @relation("reports_updated_byTousers")
  reports_history                   reports_history[]
  med_organizations                 med_organizations? @relation(fields: [mo_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
